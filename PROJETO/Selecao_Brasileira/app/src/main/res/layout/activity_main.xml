<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/teste">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CBF"
        android:id="@+id/btncbf"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hino Nacional"
        android:id="@+id/btnhino"
        android:layout_below="@+id/btncbf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maiores Artilheiros "
        android:id="@+id/btnartilheiros"
        android:layout_below="@+id/btnhino"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elenco Atual"
        android:id="@+id/btnelenco"
        android:layout_below="@+id/btnartilheiros"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnartilheiros"
        android:layout_alignEnd="@+id/btnartilheiros" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Principais Títulos"
        android:id="@+id/btntitulos"
        android:layout_below="@+id/btnelenco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="Titulos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobre Nós"
        android:id="@+id/btnsobre"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnelenco"
        android:layout_alignEnd="@+id/btnelenco" />
</RelativeLayout>
